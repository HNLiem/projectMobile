<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/whiteblack">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtPassword"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:fontFamily="@font/light"
        android:hint="  PassWord"
        android:inputType="textPassword"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="186dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtUser"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="266dp"
        android:fontFamily="@font/light"
        android:hint="  Email/Number"
        android:inputType="number"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="120dp" />


    <ImageButton
        android:id="@+id/btnSignUp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageUser"
        android:layout_marginBottom="57dp"
        android:background="@drawable/r2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp"
        android:layout_marginStart="80dp"
        android:fontFamily="@font/medium"
        android:text="Sign Up"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="89dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="109dp"
        app:srcCompat="@drawable/shoe1" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignTop="@+id/edtUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/edtPassword"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/edtPassword"
        app:srcCompat="@drawable/pass" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtUser"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:textSize="8sp" />

    <ImageButton
        android:id="@+id/btnLogin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btnSignUp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@drawable/r2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/medium"
        android:text="Sign In"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignStart="@+id/edtPassword"
        android:fontFamily="@font/light"
        android:text="Remember Me "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="229dp"
        android:fontFamily="@font/medium"
        android:text="IT'S NEVER BEEN SO EASIER"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="15sp" />


</RelativeLayout>