<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/whiteblack">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtPassword"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/edtUser"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/light"
        android:hint="  PassWord"
        android:inputType="textPassword"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="186dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtUser"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/light"
        android:hint="  Email/Number"
        android:inputType="number"
        android:textColorLink="@color/common_google_signin_btn_text_dark_default"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="120dp" />


    <ImageButton
        android:id="@+id/btnSignUp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="469dp"
        android:background="@drawable/r2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="67dp"
        android:fontFamily="@font/medium"
        android:text="Sign Up"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="89dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="135dp"
        app:srcCompat="@drawable/shoe1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="-1dp"
        app:srcCompat="@drawable/forward" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignTop="@+id/edtUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@+id/edtPassword"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/edtPassword"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/pass" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtUser"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="121dp"
        android:textSize="8sp" />

    <ImageButton
        android:id="@+id/btnLogin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-82dp"
        android:background="@drawable/r2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/medium"
        android:text="Sign In"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="36dp"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView7"
        app:srcCompat="@drawable/forwardleft" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtPassword"
        android:layout_alignBottom="@+id/switch1"
        android:fontFamily="@font/light"
        android:text="Remember Me "
        android:textStyle="bold" />


</RelativeLayout>