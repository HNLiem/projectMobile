<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hnl.myapplication.SingUp"
    android:background="@drawable/whiteblack">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtPassword"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:fontFamily="@font/light"
        android:hint="PassWord"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="186dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtPhone"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edtUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-252dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/light"
        android:hint="Phone"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="186dp" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtUser"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="252dp"
        android:fontFamily="@font/light"
        android:hint="Name"
        android:textSize="13sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="120dp" />


    <RadioGroup
        android:id="@+id/rdgChoseGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdbSeller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:fontFamily="@font/light"
            android:text="Customer" />

        <RadioButton
            android:id="@+id/rdbCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:text="Seller"
            android:textSize="14sp" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        app:srcCompat="@drawable/shoebg" />


    <ImageButton
        android:id="@+id/btnSignUp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginStart="38dp"
        android:background="@drawable/r2" />

    <ImageButton
        android:id="@+id/btncancel"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnSignUp"
        android:layout_marginEnd="37dp"
        android:background="@drawable/r2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="67dp"
        android:fontFamily="@font/medium"
        android:text="Cancel"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_toStartOf="@+id/imageView"
        android:fontFamily="@font/light"
        android:text="SignUp"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/edtUser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/edtPassword"
        android:layout_alignStart="@+id/imageView2"
        app:srcCompat="@drawable/pass" />


</RelativeLayout>